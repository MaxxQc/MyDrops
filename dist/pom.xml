<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>dist</artifactId>
    <version>1.1</version>
    <packaging>jar</packaging>

    <parent>
        <groupId>net.maxxqc</groupId>
        <artifactId>mydrops-parent</artifactId>
        <version>1.1</version>
    </parent>

    <properties>
        <maven.assembly.plugin.version>2.4</maven.assembly.plugin.version>
        <dep.version>${project.parent.version}</dep.version>
    </properties>

    <build>
        <directory>../target</directory>
        <finalName>MyDrops-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>org.bstats</pattern>
                                    <shadedPattern>net.maxxqc.mydrops</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-resource-to-1.20.1</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>

                        <configuration>
                            <outputDirectory>../tests/1.20.1/plugins</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../target</directory>
                                    <includes>
                                        <include>MyDrops-${project.version}.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-resource-to-1.19.2</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>

                        <configuration>
                            <outputDirectory>../tests/1.19.2/plugins</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../target</directory>
                                    <includes>
                                        <include>MyDrops-${project.version}.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-resource-to-1.20.2</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>

                        <configuration>
                            <outputDirectory>../tests/1.20.2/plugins</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../target</directory>
                                    <includes>
                                        <include>MyDrops-${project.version}.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>net.maxxqc</groupId>
            <artifactId>mydrops-core</artifactId>
            <version>${project.parent.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>